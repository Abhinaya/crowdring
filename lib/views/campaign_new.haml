%script{type: 'text/javascript'}
  window.numbers = $.parseJSON('#{@voice_numbers.to_json}')

#new-campaign.rounded-box
  %h2 New Campaign
  -if @voice_numbers.empty?
    %h3 Sorry, no SMS numbers currently available.
  -else
    %form{action: '/campaign/new/missed_call', method: 'get'}
      .field
        %label Title your campaign:
        %input.title-input{type: 'text', name: 'campaign[title]'}
      #selected-regions
      .field
        %label Select the Voice Number:
        %select.region-select
          %option{value:"", selected: 'selected', disabled:"disabled"} Select a region
          -@voice_numbers.each_with_index do |n, i|
            %option= "#{n[:country]}-#{n[:region] || 'General'}"
      .field
        %input#missed-call{type: 'radio', name:'init_ask', value: 'missed_call', checked: 'checked'}
        %label#init-ask{for: 'missed-call'} Missed call only (FREE)
        %input#sms-back{type: 'radio', name:'init_ask', value: 'sms_back'}
        %label#init-ask{for: 'sms_back'} Missed call with SMS back
        %input#double-opt-in{type: 'radio', name:'init_ask', value: 'double_opt_in'}
        %label#init-ask{for: 'missed-call'} Double opt in
      %button{type: 'submit'} Start creating campaign
%a{href: '/'} 
