#new-campaign.rounded-box
  %h2 New Campaign
  -if @sms_numbers.empty?
    %h3 Sorry, no SMS numbers currently available.
  -else
    %form{action: '/campaign/create', method: 'post'}
      .field
        %label Title:
        %input.title-input{type: 'text', name: 'campaign[title]'}
      .field
        %label SMS Number:
        %select{name: 'campaign[sms_number][phone_number]'}
          -@sms_numbers.each do |n|
            %option #{n}
      %h3 Introductory Message
      #filtered-messages
      %button#new-filter-button{type: 'button', onclick: "window.addFilter();"} Add filtered message
      .field
        %label Default Message:
        %textarea.msg-text-area{name: 'campaign[message][default_message]', placeholder: 'Thanks for supporting...'}
      %button{type: 'submit'} Create
