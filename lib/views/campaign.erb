<h2>Campaign Details</h2>

<div id="campaign-information">
  <div id="campaign-details">
    <h3><%= @campaign.title %> </h3>
    <h3>(<%= @campaign.pretty_phone_number %>)</h3>

    <div id="supporters">
      <h3><div class="count"><%= @supporters.size %> Supporter<% if @supporters.size != 1 %>s<% end %></div></h3>
      <% if @supporters.empty? %>
        <ul class="supporters"></ul>
      <% else %>
        <ul class="supporters">
          <% for @supporter in @supporters %>
            <li><%= @supporter.pretty_phone_number %></li>
          <% end %>
        </ul>
      <% end %>
    <form action="/campaign/destroy" method="post">
      <input type="hidden" name="phone_number" value="<%= params[:phone_number] %>" />
      <button type="submit">Destroy Campaign</button>
    </form>
    </div>
  </div>


  <div id="broadcast">
    <h3>Broadcast</h3>
    <form action="/broadcast" method="post">
      <textarea name="message" placeholder="Hello supporters..." id="broadcast-text-area"></textarea>
      <input type="hidden" name="phone_number" value="<%= params[:phone_number] %>" /><br />
      <button type="submit" id='broadcastbutton' disabled='disabled'>Broadcast</button>
    </form>
  </div>
</div>
