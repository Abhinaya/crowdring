<html>
  

  <body>

    <%= erb :logoHeader %>
    
    <div class="content">
      <% if flash.has?(:errors) %>
        <div class="errors"><%= flash[:errors].sub('|','<br />') %></div>
      <% end %>

      <div id='new-campaign-box'>
        <h2>New Campaign</h2>
        <% if @numbers.empty? %>
         <h3> Sorry, all numbers are currently in use </h3>
        <% else %>
          <form action="/campaign/create" method="post">
            <label>Title:</label>
              <input type="text" name="title" />
            <br />
            <br />

            <label>Phone Number:</label>
              <select name="phone_number">
                <% for @number in @numbers %>
            	   <option><%= @number %></option>
            	  <% end %>
            	</select>
            <button type="submit">Create</button>
          </form>
        <% end %>
        <br/>
        <a href="/">Â« Back to home</a>
      </div>
    </div>

  </body>
</html>

