    window.pusher_key = '#{ENV['PUSHER_KEY']}';
  %link{ref: 'shortcut icon'}

  %body
    %header
      %title CROWDRING
      %a{href: '/'}
        %img.logo{src: '/crowdringlogo.png'}
      %a{href: '/'}
        %h1 CROWDRING
      #login-logout=render_login_logout
    -if flash.has?(:notice)
      .notice= flash[:notice]
    -if flash.has?(:errors)
      .errors= flash[:errors].sub('|', '<br />')
    #content= yield