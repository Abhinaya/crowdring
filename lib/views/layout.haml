  %link{rel: 'stylesheet/less', type: 'text/css', href: '/stylesheets/application.less'}
  %link{rel: 'stylesheet', type: 'text/css', href: 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.23/themes/overcast/jquery-ui.css'}
  %script{type: 'text/javascript', src: '/javascript/jquery-1.8.1.min.js'}
  %script{type: 'text/javascript', src: '/javascript/jquery-ui-1.8.23.custom.min.js'}
  %script{type: 'text/javascript', src: '/javascript/charCount.js'}
  %script{type: 'text/coffeescript', src: '/javascript/application.coffee'}
