#new-campaign.rounded-box
  %h2 Edit Campaign
  %form{action: "/campaign/#{@campaign.id}/update", method: 'post'}
    .field
      %label 
        Title:
        =@campaign.title
    .field
      %label Phone Number:
      %select{name: 'campaign[assigned_phone_numbers][]'}
        -@numbers.each do |n|
          -if @campaign_numbers.include? n
            %option{selected: 'selected'} #{n}
          -else
            %option #{n}
    %button{type: 'submit'} Update
