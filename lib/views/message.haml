#message
  %h3 Messages
  #messages 
    -message.nondefault_messages.each do |fm|
      %label When:
      .message
        -fm.tag_filter.tags.each do |tag|
          -type, value = tag.to_s.split(":")
          %li= type.capitalize + " : " + value
      %label Then:
      .message
        = "\"#{fm.message_text}\""
    %label Default:
    .message  
      = "\"#{message.default_message}\""
