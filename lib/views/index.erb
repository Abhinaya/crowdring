<html>
  <body>
    <div class="content">
      <%= erb :logoHeader %>

      <% if flash.has?(:notice) %>
        <div class="notice"><%= flash[:notice] %></div>
      <% end %>

      <h2>Campaigns</h2>
      <form action="/campaign/new" method="get">
        <button>New Campaign</button>
      </form>

      <select name="number" class="number">
        <option value="">Select a number to see subscribers</option>
        <% for @campaign in @campaigns %>
          <option value=<%= @campaign.phone_number %>><%= @campaign.title %> (<%= @campaign.pretty_phone_number %>)</option>
        <% end %>
      </select>

      <div id="campaign"></div>
   </div>
  </body>
</html>
