#sinatra_authentication.rounded-box
  %h2 Reset Password
  %form{action: "/resetpassword", method: "post"}
    .field
      .label
        %label{for: "user_email"} Email
      %input{ id: "user_email", name: "email", size: 30, type: "text" , value: params[:email]}
    %button Reset Password
  New Password will be auto-generated and emailed to you.
